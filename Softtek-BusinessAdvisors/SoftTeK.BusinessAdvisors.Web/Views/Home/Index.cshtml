@model SoftTeK.BusinessAdvisors.Web.Models.IndexModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">SOFTTEK</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="row justify-content-center text-start">
        <div class="col-4">
            <div>
                <label>Email:</label>
                <strong>admin@admin.com</strong>
            </div>
            <div>
                <label>Password:</label>
                <strong>admin</strong>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <form action="home/login" method="post">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" name="email" class="form-control" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    @if (Model.Users != null)
    {
        <div class="row justify-content-center">
            <div class="col-4">
                <ul>
                    @foreach (var item in Model.Users)
                    {
                        <li>@item.Email</li>
                    }
                </ul>
            </div>
        </div>
    }
    @if (Model.User != null)
    {
        <div class="row justify-content-center mt-2">
            <div class="row justify-content-center">
                <div class="card text-white bg-primary mb-3 justify-content-center" style="max-width: 18rem;">
                    <div class="card-header">Datos de usuario</div>
                    <div class="card-body">
                        <h5 class="card-title">Credenciales</h5>
                        <p class="card-text">
                            <span>@Model.User.FirstName</span>
                            <span>@Model.User.LastName</span>
                            <span>@Model.User.Email</span>
                            <span class="bg-dark">@Model.User.Token</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
